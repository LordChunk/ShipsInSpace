@using GalacticSpaceTransitAuthority
@model ShipsInSpace.Models.SelectionOfShipModel
@inject ISpaceTransitAuthority TransitAuthority
@{
    Model.SelectedShip.Wings = new List<Wing>();
    for (var i = 0; i < Model.NumberOfWings; i++)
    {
        Model.SelectedShip.Wings.Add(null);
    }
}
<h4>Wing</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Step2Confirm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @for (var wingIndex = 0; wingIndex < Model.NumberOfWings; wingIndex++)
            {
                <div class="form-group">
                    <select asp-for="@Model.SelectedShip.Wings[wingIndex]">
                        @foreach (var wing in TransitAuthority.GetWings())
                        {
                        <option value="@wing.Id">@wing.Name</option>
                        }
                    </select>    
                </div>
            }
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>