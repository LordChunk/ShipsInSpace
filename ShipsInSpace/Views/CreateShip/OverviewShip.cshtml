@{
    ViewData["Title"] = "Create Ship";
}
@model ShipViewModel


<div class="text-center">
    <h4>Wing</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <h3>Configuration</h3>
            <partial model="@Model" name="ShipOverview"/>
            <form asp-action="SubmitShip">
                <input type="hidden" asp-for="Engine.Id" value="@Model.Engine.Id" />
                <input type="hidden" asp-for="Hull.Id" value="@Model.Hull.Id" />
                <input type="hidden" asp-for="Name" value="@Model.Name" />
                
                @for (int i = 0; i < Model.Wings.Count; i++)
                {
                    <input type="hidden" asp-for="Wings[i].Id"/>
                    for (int j = 0; j < Model.Wings[i].Hardpoint.Count; j++)
                    {
                        <input type="hidden" asp-for="Wings[i].Hardpoint[j].Id"/>
                    }
                }

                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>